// Helper function pour afficher une icône enfantine
function childIcon(name, size = 'medium', extraClass = '') {
  const sizeClass = {
    'small': 'child-icon',
    'medium': 'child-icon-large', 
    'large': 'child-icon-xl'
  }[size] || 'child-icon-large';
  
  return `<svg class="${sizeClass} ${extraClass}" aria-hidden="true"><use href="/images/icons.svg#icon-${name}"></use></svg>`;
}

